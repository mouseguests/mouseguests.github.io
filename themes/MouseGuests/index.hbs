{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if socialnetwork.facebook}}
        <a href="{{socialnetwork.facebook}}"><img src="/images/fb.png" alt="MouseGuests on Facebook" border="0"/></a>
        {{/if}}
        {{#if socialnetwork.twitter}}
        <a href="{{socialnetwork.twitter}}"><img src="/images/tw.png" border="0" alt="MouseGuests on Twitter"/></a>
        {{/if}}    
        {{#if socialnetwork.instagram}}
        <a href="{{socialnetwork.instagram}}"><img src="/images/igram.png" border="0" alt="MouseGuests on Instagram"/></a>
        {{/if}}    
	<a href="http://www.mouseguests.com/feed.rss"><img src="/images/rss.png" border="0" alt="RSS Feed"/></a>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <img src="{{@blog.logo}}" alt="MouseGuests" style="width: inherit;"/>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
